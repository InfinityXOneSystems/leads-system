# LEAD SNIPER - LOCAL EXECUTION CONFIGURATION
# Alpha-Sprint 01 | Omni-Lock Protocol

# Execution Mode
EXECUTION_MODE=local
AUTONOMOUS_MODE=true
SILENT_EXECUTION=true

# Local Node Configuration
LOCAL_PRIMARY=true
CLOUD_FALLBACK=true
SMART_ROUTING=true

# Scraping Configuration
MAX_PARALLEL_SCRAPERS=100
SCRAPE_INTERVAL_HOURS=1
AUTO_START=true
AUTO_HEAL=true

# Ollama Configuration (First-Pass Filtering)
OLLAMA_ENABLED=true
OLLAMA_MODEL=llama3
OLLAMA_HOST=http://localhost:11434
FIRST_PASS_FILTER=distressed_property

# Cloud Sync Configuration
GCP_PROJECT_ID=infinity-x-one-systems
GCP_REGION=us-central1
CLOUD_SYNC_ENABLED=true
SYNC_INTERVAL_SECONDS=60

# Storage Paths
LOCAL_DATA_PATH=./results
LOCAL_LOG_PATH=./logs

# Data Sources (Treasure Coast FL)
TARGET_COUNTIES=Martin,StLucie,Indian River
TARGET_KEYWORDS=foreclosure,pre-foreclosure,distressed,motivated seller,short sale
MLS_ENABLED=false
PUBLIC_RECORDS_ENABLED=true

# Validation
TRIPLE_CHECK_ENABLED=true
MIN_CONFIDENCE_THRESHOLD=0.7

# Scheduling
SCHEDULED_EXECUTION=true
SCHEDULE_TIME=05:00
SCHEDULE_TIMEZONE=America/New_York

# Reporting
REPORT_GENERATION=true
REPORT_FORMAT=json,csv

# Debug
DEBUG_MODE=false
LOG_LEVEL=INFO
